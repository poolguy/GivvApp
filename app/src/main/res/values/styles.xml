<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/Support.Toolbar</item>
    </style>


    <!-- toolbar styles -->
    <style name="Support.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="Support.Toolbar.Tabs" parent="Widget.AppCompat.Toolbar">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabBackground">@drawable/custom_ripple</item>
        <item name="tabTextAppearance">@style/Support.Toolbar.Tabs.Text</item>
        <item name="tabSelectedTextColor">@color/textDark</item>
    </style>
    <style name="Support.Toolbar.Tabs.Text" parent="Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/textLight</item>
    </style>

    <style name="Support.Toolbar.Popup" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="loginButtonStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- TabLayout style-->
    <style name="ByuTabLayout" >
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- text styles -->
    <style name="Support.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textDark</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="Support.Text.NoPadding" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textDark</item>
    </style>
    <style name="Support.Text.Medium" parent="Support.Text">
        <item name="android:textSize">17sp</item>
    </style>
    <style name="Support.Text.Medium.NoPadding" parent="Support.Text.NoPadding">
        <item name="android:textSize">17sp</item>
    </style>
    <style name="Support.Text.Large" parent="Support.Text">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Support.Text.Large.NoPadding" parent="Support.Text.NoPadding">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Support.Text.ExtraLarge" parent="Support.Text">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Support.Text.ExtraLarge.NoPadding" parent="Support.Text.NoPadding">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Support.Text.Header" parent="Support.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Support.Text.Light" parent="Support.Text">
        <item name="android:textColor">@color/textLight</item>
    </style>
    <style name="Support.Text.Light.NoPadding" parent="Support.Text.NoPadding">
        <item name="android:textColor">@color/textLight</item>
    </style>
    <style name="Support.Text.Light.Medium" parent="Support.Text.Light">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Support.Text.Light.Medium.NoPadding" parent="Support.Text.Light.NoPadding">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Support.Text.Light.Large" parent="Support.Text.Light">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Support.Text.Light.Large.NoPadding" parent="Support.Text.Light.NoPadding">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Support.Text.Lighter" parent="Support.Text">
        <item name="android:textColor">@color/textLighter</item>
    </style>
    <style name="Support.Text.Lighter.NoPadding" parent="Support.Text.NoPadding">
        <item name="android:textColor">@color/textLighter</item>
    </style>
    <style name="Support.Text.Lighter.Medium" parent="Support.Text.Lighter">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Support.Text.Lighter.Medium.NoPadding" parent="Support.Text.Lighter.NoPadding">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Support.Text.Lighter.Large" parent="Support.Text.Lighter">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Support.Text.Lighter.Large.NoPadding" parent="Support.Text.Lighter.NoPadding">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Support.Text.White" parent="Support.Text">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Support.Text.White.NoPadding" parent="Support.Text.NoPadding">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Support.Text.White.Medium" parent="Support.Text.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Support.Text.White.Medium.NoPadding" parent="Support.Text.White.NoPadding">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Support.Text.White.Large" parent="Support.Text.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Support.Text.White.Large.NoPadding" parent="Support.Text.White.NoPadding">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
